{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccount_name": {
      "defaultValue": "dfblog",
      "type": "String"
    }
  },
  "variables": {},
  "resources": [
    {
      "comments": "Local Redundancy, V2 Standard Storage Account ",
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "StorageV2",
      "name": "[parameters('storageAccount_name')]",
      "apiVersion": "2018-07-01",
      "location": "northeurope",
      "tags": {
        "Environment": "Production",
        "Service": "damianflynn.com"
      },
      "scale": null,
      "properties": {
        "networkAcls": {
          "bypass": "AzureServices",
          "virtualNetworkRules": [],
          "ipRules": [],
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "file": {
              "enabled": true
            },
            "blob": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "accessTier": "Hot"
      },
      "dependsOn": []
    }
  ]
}